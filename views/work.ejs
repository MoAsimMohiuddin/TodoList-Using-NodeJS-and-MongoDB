<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" href="/styles/style.css">
    <title>Todo List</title>
</head>
<body>
    <header class="nav-bar">
        <a class="route today-route" href="/">Today</a>
        <a class="route work-route" href="/work">Work</a>
    </header>
    <div class="dateBox">
        <p><em class="dateText"><%=day%>, <%=month%> <%=date%></em></p>
    </div>
    <div class="whole-container">
        <%if(locals.workArray){%>
            <%if(workArray.length!=0){%>
                <%workArray.forEach(function(value){%>
                    <div class="taskList">
                        <div class="addedTask">
                            <form id="check-box-form" action="/deleteWork" method="post">
                                <%=value.task%>
                                <input class="cb" id="cb" type="checkbox" name="checkbox" value=<%=value._id%> onChange="document.getElementById('check-box-form').submit()">
                            </form>
                        </div>
                    </div>
                <%})%>
            <%}%>
        <%}%>
        <form action="/work" class="taskForm" method="post">
            <input class="textBox" name="work" type="text" placeholder="Add a New Task For Work">
            <input class="button" type="submit" value="+">
        </form>
    </div>
</body>
</html>